<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="register"
            type="com.ks.amm.auth.model.Register" />

        <variable
            name="activity"
            type="com.ks.amm.auth.register.RegisterActivity" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/left_arrow_white" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/et_display_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/hint_d_name"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:text="@{register.name}"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/sp_14" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp__3"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/light_grey" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_5"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/hint_email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:text="@{register.email}"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/sp_14" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp__3"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/light_grey" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_5"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:text="@{register.password}"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/sp_14" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp__3"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/light_grey" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_5"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/hint_c_password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:text="@{register.password}"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/sp_14" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp__3"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/light_grey" />

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@mipmap/signup_button" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="Already have an account"
                    android:textColor="@color/light_grey_1" />


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</layout>
